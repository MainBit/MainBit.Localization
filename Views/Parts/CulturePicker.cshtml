@using System.Globalization
@using MainBit.Localization.Models
@{
    var items = Model.ViewModel as List<MainBit.Localization.ViewModels.CulturePickerViewModel>;
}
<ul class="cultures">
@foreach (var item in items)
{
    <li>
        @if (string.IsNullOrEmpty(item.Url))
        {
            <span class="flag @item.CultureInfo.TwoLetterISOLanguageName">@item.DisplayName</span>
        }
        else {
            <a href="@item.Url" class="flag iconed @item.CultureInfo.TwoLetterISOLanguageName" rel="nofollow"><span>@item.DisplayName</span></a>
        } 
    </li>
}
</ul>